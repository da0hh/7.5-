#include <iostream>



int main() {
    setlocale(LC_ALL, "RU");
    int count = 100;
    std::cout << "Всего гречки было на начало подсчёта: " << count << " кг\n";
    for (int month = 1; count >= 0; count -= 4) {
        std::cout << "После " << month << " месяца у вас в запасе останется " << count << " кг гречки\n";
        month++;
    } 
}
