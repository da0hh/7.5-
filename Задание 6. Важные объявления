#include <iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "RU");
    int totalLength, exclamationCount;
    cout << "Введите общую длину колонтитула (минимум 1 символ): "; cin >> totalLength;
    cout << "Введите количество восклицательных знаков: "; cin >> exclamationCount;

    if (totalLength < 1) cout << "Ошибка: длина должна быть положительной!\n";
    if(exclamationCount < 0 or exclamationCount > totalLength) cout << "Ошибка: недопустимое количество знаков!\n";

    int leftSpaces = (totalLength - exclamationCount) / 2;
    int rightSpaces = totalLength - exclamationCount - leftSpaces;

    for (int i = 0; i < leftSpaces; i++) {
        cout << "~";
    }

    for (int i = 0; i < exclamationCount; i++) {
        cout << "!";
    }

    for (int i = 0; i < rightSpaces; i++) {
        cout << "~";
    }

    cout << endl;
}
