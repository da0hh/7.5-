#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "RU");
    int height;
    do {
        cout << "Введите высоту треугольника (целое число от 1 до 50): ";
        cin >> height;

        if (height < 1 || height > 50) {
            cout << "Ошибка: высота должна быть в диапазоне от 1 до 50!\n";
        }
    } while (height < 1 || height > 50);

    for (int i = 1; i <= height; i++) {
        for (int j = 1; j <= height - i; j++) {
            cout << " ";
        }
        for (int k = 1; k <= 2 * i - 1; k++) {
            cout << "#";
        }
        cout << "\n";
    }

}
